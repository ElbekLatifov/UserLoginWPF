<Page x:Class="NewNewProject.Pages.ShopsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NewNewProject.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="545"
      Title="ShopsPage" Loaded="Page_Loaded_1">

    <Grid Background="#ffffff">
        <StackPanel Orientation="Horizontal" Height="50" VerticalAlignment="Top" >
            <ComboBox x:Name="sort_by_description" HorizontalAlignment="Left" Margin="5 0" Height="30" Width="150" SelectionChanged="sort_by_description_Selected" Cursor="IBeam" IsReadOnly="True"/>
            <TextBox x:Name="search_txt" Width="300" Height="30" Margin="5 0" FontSize="22" FontFamily="Times New Roman"/>
            <Button x:Name="search_btn" Width="65" Height="30" Content="Search" FontSize="15" Click="search_btn_Click" FontFamily="SimSun-ExtB" Background="#FF54F718"/>
        </StackPanel>
        <ListBox x:Name="shoplists" SelectionChanged="shoplists_SelectionChanged" Height="550" VerticalAlignment="Bottom">
            
        </ListBox>
    </Grid>
</Page>
