<Window x:Name="updateWindow" x:Class="NewNewProject.Pages.UpdateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NewNewProject.Pages"
        mc:Ignorable="d"
        Title="UpdateWindow" Height="250" Width="400" Loaded="updateWindow_Loaded">
    <Grid>
        <TextBox x:Name="add_txt" HorizontalAlignment="Center" Margin="1,31,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="300" Height="45" FontSize="28"/>
        <Label Content="Shop name:" FontSize="8" HorizontalAlignment="Left" Height="20" Margin="50,10,0,0" VerticalAlignment="Top" Width="87"/>
        <Label Content="Description:" FontSize="8" HorizontalAlignment="Left" Height="20" Margin="50,80,0,0" VerticalAlignment="Top" Width="87"/>
        <ComboBox x:Name="description_combo" HorizontalAlignment="Center" Height="40" Margin="1,100,0,0" VerticalAlignment="Top" Width="300"/>
        <Button x:Name="update_btn" Background="green" Content="Update" Foreground="Azure" FontSize="20" HorizontalAlignment="Center" Margin="1,165,0,0" VerticalAlignment="Top" Height="50" Width="300" Click="update_btn_Click"/>

    </Grid>
</Window>
