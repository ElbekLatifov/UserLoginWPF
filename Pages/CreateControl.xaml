<UserControl x:Name="createModel" x:Class="NewNewProject.Pages.CreateControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NewNewProject.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="400" Loaded="createModel_Loaded">
    <Grid Background="#ffffff">
        <TextBox x:Name="add_txt" HorizontalAlignment="Center" Margin="1,31,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="300" Height="45" FontSize="26"/>
        <Label Content="Shop name:" FontSize="8" HorizontalAlignment="Left" Height="20" Margin="50,10,0,0" VerticalAlignment="Top" Width="87"/>
        <Label Content="Description:" FontSize="8" HorizontalAlignment="Left" Height="20" Margin="50,80,0,0" VerticalAlignment="Top" Width="87"/>
        <ComboBox x:Name="description_combo" HorizontalAlignment="Center" Height="40" Margin="1,100,0,0" VerticalAlignment="Top" Width="300"/>
        <Button x:Name="add_btn" Background="green" Content="Add" Foreground="Azure" FontSize="20" HorizontalAlignment="Center" Margin="1,165,0,0" VerticalAlignment="Top" Height="50" Width="300" Click="add_btn_Click"/>

    </Grid>
</UserControl>
