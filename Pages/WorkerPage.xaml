<Page x:Name="ShopsPage" x:Class="NewNewProject.Pages.WorkerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NewNewProject.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="850"
      Title="WorkerPage" Loaded="ShopsPage_Loaded_1">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="1.8*"/>
        </Grid.ColumnDefinitions>

        <Border CornerRadius="0,0,0,0" >
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#3AA9AD" Offset="0"/>
                    <GradientStop Color="#3AADA1" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid>
                <Canvas>
                    <Polygon Points="0,20 230,140 0,270" Fill="#4EB1B6"/>
                    <Polygon Points="300,450  150,500 300,550" Fill="#4EB1B6"/>
                    <Ellipse Margin="100,350,450,0" Fill="#4EB1B6" Width="40" Height="40"/>
                </Canvas>
                <StackPanel>
                    <Image Height="30" Width="30" Margin="1" HorizontalAlignment="Left" Source="/Pages/60689.png" MouseLeftButtonDown="Image_MouseLeftButtonDown" Cursor="Hand"/>
                    <Image x:Name="PersonalImage" Width="200" Height="198" Margin="50, 0, 50, 0" Stretch="Fill"/>
                    <Button Background="#3AA9AD" Content="Click here for select image" Width="160" Click="Button_Click" FontFamily="Bodoni MT Condensed" FontSize="14" BorderBrush="#FF3AA9AD"/>
                    <Button x:Name="personal_read_btn" Background="#3AA9AD" HorizontalAlignment="Center" Content="My Shops" Width="300" Height="50" Margin="50,20,50,0" Click="myshops_btn_Click" FontFamily="Algerian" FontSize="36"/>
                    <Button x:Name="read_btn" Background="#3AA9AD" HorizontalAlignment="Center" Content="See Shops" Width="300" Height="50" Margin="50,20,50,0" Click="read_btn_Click" FontFamily="Algerian" FontSize="36"/>
                    <Button x:Name="create_btn" Background="#3AA9AD" HorizontalAlignment="Center" Content="Add Shop" Width="300" Height="50" Margin="50,20,50,0" Click="create_btn_Click" FontFamily="Algerian" FontSize="36"/>

                </StackPanel>
            </Grid>
        </Border>

        <Border Background="#ffffff" Grid.Column="1" CornerRadius="0,0,20,20">

            <StackPanel>
                <StackPanel Orientation="Horizontal" Height="50" VerticalAlignment="Top" >
                    <ComboBox x:Name="sort_by_description" HorizontalAlignment="Left" Margin="5 0" Height="30" Width="150" SelectionChanged="sort_by_description_Selected" Cursor="IBeam" IsReadOnly="True"/>
                    <TextBox x:Name="search_txt" Width="300" Height="30" Margin="5 0" FontSize="22" FontFamily="Times New Roman"/>
                    <Button x:Name="search_btn" Width="65" Height="30" Content="Search" FontSize="15" Click="search_btn_Click" FontFamily="SimSun-ExtB" Background="#FF54F718"/>
                </StackPanel>

                <ListBox x:Name="shoplists" Height="550"/>
            </StackPanel>

        </Border>
    </Grid>
</Page>
